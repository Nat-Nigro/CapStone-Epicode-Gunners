@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var animated = false; // Flag per prevenire l'animazione multipla

            $(window).scroll(function () {
                var top_of_element = $("#progress-section").offset().top;
                var bottom_of_element = $("#progress-section").offset().top + $("#progress-section").outerHeight();
                var bottom_of_screen = $(window).scrollTop() + $(window).innerHeight();
                var top_of_screen = $(window).scrollTop();

                if ((bottom_of_screen > top_of_element) && (top_of_screen < bottom_of_element) && !animated) {
                    // L'elemento è visibile e l'animazione non è ancora stata eseguita
                    $('.progress-bar').each(function () {
                        var max = $(this).attr('aria-valuemax');
                        var now = $(this).attr('aria-valuenow');
                        var width = (now / max) * 100;
                        $(this).css('width', width + '%').text(now);
                    });
                    animated = true; // Imposta il flag a true per non ripetere l'animazione
                }
            });
        });
    </script>
