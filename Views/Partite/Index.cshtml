@model IEnumerable<HomeTeamWebSite.Models.Partite>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-color: #e0e1e3;
    }
</style>



<h1 class="text-center mt-3 titolo-player">Last tickets of the season available</h1>

<div class="container mt-5 min-vh-100">
    @foreach (var item in Model)
    {

        <div class="d-flex justify-content-between align-items-center p-3 border mb-3 @(item.IdPartita == 1 ? "special-background" : "sfondo")">

            <div class="p-1">
                <img src="~/Content/imgPartite/@item.ImgCasa" style="width: 100px" />
            </div>

            <div class="p-1 text-center text-white">
                <strong>Date:</strong> <span class="data-partita">@Html.DisplayFor(modelItem => item.Data)</span>
                <div class="p-1">

                    @if (item.IdPartita == 3)
                    {
                        <div class="text-center">
                            <p class="m-0 p-0">Please visit the section for fan card holders</p>
                            <br />
                            <a href="https://www.arsenal.com/how-to-buy-away-tickets" target="_blank" class="btn btn-info btn-sm fw-bold">Away Tickets</a>
                        </div>
                    }
                    else if (item.IdPartita == 5)
                    {
                        <h5 class="bg-warning p-1 rounded" >SOLD OUT</h5>

                    }
                    else
                    {
                        @Html.ActionLink("Check Seats", "CheckSeats", new { id = item.IdPartita }, new { @class = "btn btn-primary btn-sm fw-bold" })
                    }

                </div>
            </div>

            <div class="p-1">
                <img src="~/Content/imgPartite/@item.ImgOspite" style="width: 100px" />
            </div>


        </div>

    }


</div>
