@model HomeTeamWebSite.Models.Prodotti

@{
    ViewBag.Title = "Delete";
}

<style>
    body {
        background-color: #f8f9fa;
    }
</style>

<div class="container min-vh-100 ">
    <h3 class="mt-5">Are you sure you want to delete this product?</h3>
    <div>

        <hr />
        <div class="border container">
            <dl class="dl-horizontal">
                <dt>
                    Product:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NomeProdotto)
                </dd>

                <dt>
                    Description:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descrizione)
                </dd>

                <dt>
                    Price:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Prezzo) £
                </dd>
                <dt>
                    Images:
                </dt>
                <dd class="d-flex justify-content-between mt-2">
                    <img src="@Url.Content("~/Content/imgProdotti/" + Model.Immagine)" alt="Product Image" style="width: 300px" />
                    <img src="@Url.Content("~/Content/imgProdotti/" + Model.Immagine2)" alt="Product Image" style="width: 300px" />
                    <img src="@Url.Content("~/Content/imgProdotti/" + Model.Immagine3)" alt="Product Image" style="width: 300px" />
                </dd>

            </dl>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color my-3">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info " })
                </div>
            }
        </div>
    </div>
</div>