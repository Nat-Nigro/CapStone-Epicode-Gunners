<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <img src="~/Content/img/ArsenalLogo.png" class="logo-nav mb-2" width="100" />
            @Html.ActionLink("Nome applic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-dark" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Home", "Home", new { area = "" }, new { @class = "nav-link text-center text-white " })</li>
                    <li>@Html.ActionLink("Official Store", "Index", "Prodotti", new { area = "" }, new { @class = "nav-link text-center text-white" })</li>
                    <li>@Html.ActionLink("Matches - Tickets", "Index", "Partite", new { area = "" }, new { @class = "nav-link text-center text-white" })</li>
                    <li>@Html.ActionLink("Players", "Index", "Players", new { area = "" }, new { @class = "nav-link text-center text-white" })</li>
                    <li>@Html.ActionLink("Standings", "Index", "Standing", new { area = "" }, new { @class = "nav-link text-center text-white" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link text-center text-danger " })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("| SignIn - SignUp", "Index", "Home", new { area = "" }, new { @class = "nav-link text-center text-white" })</li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-link text-center text-white"><i class="bi bi-person-circle"></i> @User.Identity.Name</li>
                    </ul>
                }

            </div>
        </div>
    </nav>

    <div class="">
        @RenderBody()
        <hr class="my-0 py-0" />
        <footer class="bg-dark my-0 py-0" id="footer">
            <div class="container">
                <h5 class="text-center text-white py-2">Follow us on all social media platforms</h5>
                <div class="d-flex p-2 justify-content-around">

                    <a href="https://www.instagram.com/arsenal/" target="_blank"> <img src="~/Content/img/instagram.png" alt="instagram  logo" width="50" height="40" /></a>
                    @{ 
                        string tiktokLink = "https://www.tiktok.com/@arsenal";
                    }
                    <a href="@tiktokLink" target="_blank"><img src="~/Content/img/tiktok.png" alt="twitter logo" width="50" height="40" /></a> 
                    <a href="https://t.me/s/arsenalivetv?before=5019" target="_blank"><img src="~/Content/img/telegram.png" alt="telegram logo" width="50" height="40" /></a> 
                    <a href="https://twitter.com/Arsenal" target="_blank"><img src="~/Content/img/twitter.png" width="50" height="40" /></a>
                    <a href="https://www.facebook.com/Arsenal" target="_blank"><img src="~/Content/img/facebook.png" width="50" height="40" /></a> 
                </div>
            </div>
            <div class="mx-5">
                <p class="text-white text-center m-0 py-2">
                    &copy; @DateTime.Now.Year - Made By Nat.
                    <br />All rights reserved. No part of this publication may be reproduced, distributed, or transmitted in any form or by any means, including photocopying, recording, or other electronic or mechanical methods, without the prior written permission of the publisher, except in the case of brief quotations embodied in critical reviews and certain other noncommercial uses permitted by copyright law.
                </p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>
</html>
